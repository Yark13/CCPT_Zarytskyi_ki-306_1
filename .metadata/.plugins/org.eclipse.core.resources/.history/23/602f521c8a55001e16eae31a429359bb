import java.util.Scanner;
import java.io.FileWriter;
import java.io.IOException;

public class Lab1ZarytskyiKi306 {
	public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Введення розміру квадратної матриці
        System.out.print("Введіть розмір квадратної матриці: ");
        int matrixSize = scanner.nextInt();

        // Введення символу-заповнювача
        System.out.print("Введіть символ-заповнювач: ");
        char fillSymbol = scanner.next().charAt(0);

        // Генерація зубчатого масиву з квадратної матриці
        char[][] jaggedArray = generateJaggedArray(matrixSize, fillSymbol);

        // Виведення масиву на екран
        printArray(jaggedArray);

        // Запис масиву у текстовий файл
        writeArrayToFile(jaggedArray);
    }

    private static char[][] generateJaggedArray(int size, char fillSymbol) {
        char[][] jaggedArray = new char[size][];

        for (int i = 0; i < size; i++) {
            jaggedArray[i] = new char[size - Math.abs(i - (size / 2))-(size - 1 / 2)];
            for (int j = 0; j < jaggedArray[i].length; j++) {
                jaggedArray[i][j] = fillSymbol;
            }
        }

        return jaggedArray;
    }

    private static void printArray(char[][] array) {
        for (char[] row : array) {
            for (char element : row) {
                System.out.print(element + " ");
            }
            System.out.println();
        }
    }

    private static void writeArrayToFile(char[][] array) {
        try (FileWriter writer = new FileWriter("output.txt")) {
            for (char[] row : array) {
                for (char element : row) {
                    writer.write(element + " ");
                }
                writer.write("\n");
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
